<UserControl x:Class="Lunalipse.Presentation.LpsComponent.VolumePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lunalipse.Presentation.LpsComponent"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="45">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.80*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="2" VerticalContentAlignment="Center" Foreground="White" Content="20" HorizontalContentAlignment="Center" x:Name="ValueDisp"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="0.4*"/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>
            <local:VerticalDragBar Grid.Column="1" x:Name="VolumBar" TrackColor="#FFBB3737"/>
        </Grid>
    </Grid>
</UserControl>
